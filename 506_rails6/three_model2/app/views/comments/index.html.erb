<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Status</th>
      <th>Entry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entry.comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.status %></td>
        <td><%= comment.entry_id %></td>
        <td><%= link_to 'Show', [@blog,@entry,comment] %></td>
        <td><%= link_to 'Edit', edit_blog_entry_comment_path(@blog,@entry,comment) %></td>
        <td><%= link_to 'Destroy', [@blog,@entry,comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_blog_entry_comment_path(@blog,@entry) %>
